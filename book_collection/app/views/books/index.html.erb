<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="books index">
  <h2>Books</h2>

  <%= button_to("Add New Book", new_book_path, method: :get, :class => 'action new') %>

  <table class="listing" summary="Book list">
    <tr class="header">
      <th>Title</th>
      <th>Author</th>
      <th>Genre</th>
      <th>Price</th>
      <th>Published Date</th>
      <th>Actions</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td class="center"><%= book.title %></td>
      <td class="center"><%= book.author %></td>
      <td class="center"><%= book.genre %></td>
      <td class="center"><%= book.price %></td>
      <td class="center"><%= book.published_date %></td>
      <td class="actions">
        <%= button_to("Show", book_path(book), method: :get, :class => 'action show') %>
        <%= button_to("Edit", edit_book_path(book), method: :get, :class => 'action edit') %>
        <%= button_to("Delete", delete_book_path(book), method: :get, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>